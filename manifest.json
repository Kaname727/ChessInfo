{
  "manifest_version": 3,
  "name": "ChessInfo",
  "version": "1.0.0",
  "description": "chess.comとlichess.orgのユーザー情報を表示します",
  "permissions": ["storage"],
  "host_permissions": ["https://lichess.org/*","https://api.chess.com/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
